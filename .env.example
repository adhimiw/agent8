# =============================================================================
# AUTONOMOUS PERSONAL ASSISTANT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual API keys and configuration

# =============================================================================
# AI API KEYS
# =============================================================================

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192

# Perplexity API Configuration  
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_MODEL=sonar-pro
PERPLEXITY_TEMPERATURE=0.3
PERPLEXITY_MAX_TOKENS=4096

# OpenAI API (Optional - for fallback or comparison)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# ChromaDB (Vector Database)
CHROMA_DB_PATH=./data/chroma_db
CHROMA_COLLECTION_NAME=assistant_memory

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=autonomous_assistant
POSTGRES_USER=assistant_user
POSTGRES_PASSWORD=your_postgres_password
DATABASE_URL=postgresql://assistant_user:your_postgres_password@localhost:5432/autonomous_assistant

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# Memory Server
MEMORY_SERVER_PATH=./data/memory.json
MEMORY_SERVER_PORT=3001

# Filesystem Server
FILESYSTEM_SERVER_ROOT=./data/workspace
FILESYSTEM_SERVER_PORT=3002

# Git Server
GIT_SERVER_ROOT=./data/repositories
GIT_SERVER_PORT=3003

# =============================================================================
# PRODUCTIVITY TOOL INTEGRATIONS
# =============================================================================

# Gmail Configuration
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# Google Drive Configuration
DRIVE_CLIENT_ID=your_drive_client_id
DRIVE_CLIENT_SECRET=your_drive_client_secret
DRIVE_REFRESH_TOKEN=your_drive_refresh_token

# Google Calendar Configuration
CALENDAR_CLIENT_ID=your_calendar_client_id
CALENDAR_CLIENT_SECRET=your_calendar_client_secret
CALENDAR_REFRESH_TOKEN=your_calendar_refresh_token

# Notion Configuration
NOTION_API_KEY=your_notion_api_key
NOTION_DATABASE_ID=your_notion_database_id

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_USERNAME=your_github_username

# Slack Configuration
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_APP_TOKEN=your_slack_app_token
SLACK_CHANNEL_ID=your_default_slack_channel

# Discord Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_GUILD_ID=your_discord_guild_id
DISCORD_CHANNEL_ID=your_discord_channel_id

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secret_key_for_encryption
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# Web Interface
STREAMLIT_PORT=8501
FASTAPI_PORT=8000
WEB_HOST=localhost

# Autonomous Agent Configuration
AUTONOMOUS_MODE=true
PROACTIVE_MONITORING=true
TRIGGER_CHECK_INTERVAL=60  # seconds
MAX_AUTONOMOUS_ACTIONS_PER_HOUR=10

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable specific features
ENABLE_EMAIL_PROCESSING=true
ENABLE_CALENDAR_INTEGRATION=true
ENABLE_GITHUB_MONITORING=true
ENABLE_SLACK_NOTIFICATIONS=true
ENABLE_NOTION_SYNC=true
ENABLE_VOICE_INTERFACE=false
ENABLE_MOBILE_NOTIFICATIONS=false

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here

# Prometheus (Metrics)
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Logging Configuration
LOG_FILE_PATH=./logs/assistant.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# =============================================================================
# RATE LIMITING AND QUOTAS
# =============================================================================

# API Rate Limits (requests per minute)
GEMINI_RATE_LIMIT=60
PERPLEXITY_RATE_LIMIT=20
GMAIL_RATE_LIMIT=100
NOTION_RATE_LIMIT=30

# Daily Quotas
MAX_DAILY_API_CALLS=1000
MAX_DAILY_EMAILS_PROCESSED=500
MAX_DAILY_AUTONOMOUS_ACTIONS=50

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Testing
TEST_MODE=false
MOCK_EXTERNAL_APIS=false
TEST_DATA_PATH=./tests/data

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_API_DOCS=true
